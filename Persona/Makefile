# This Makefile was generated by the Cake3
# https://github.com/grwlf/cake3

GUARD = .cake3/GUARD_$(1)_$(shell echo $($(1)) | md5sum | cut -d ' ' -f 1)

ifeq ($(MAIN),1)
unexport MAIN

# Main section

LIBJANSSON = $(shell pkg-config --libs jansson)
LIBLIBCURL = $(shell pkg-config --libs libcurl)
URCC = $(shell $(shell urweb -print-ccompiler) -print-prog-name=gcc)
URINCL = -I$(shell urweb -print-cinclude) 
URVERSION = $(shell urweb -version)
.PHONY: all
all: ./Makefile ./lib.urp ./test/P1.exe
.PHONY: lib
lib: ./Makefile ./lib.urp
./test/P1.exe: ./Makefile ./test/P1.urp $(call GUARD,URVERSION)
	urweb -dbms sqlite ./test/P1
./test/P1.urp: ./Makefile ./lib.urp ./test/P1.ur .cake3/tmp__testP1_in
	cat .cake3/tmp__testP1_in > ./test/P1.urp
.cake3/tmp__testP1_in: ./Makefile
	-rm -rf .cake3/tmp__testP1_in
	echo 'library ../.' >> .cake3/tmp__testP1_in
	echo 'debug' >> .cake3/tmp__testP1_in
	echo 'safeGet P1/main' >> .cake3/tmp__testP1_in
	echo '' >> .cake3/tmp__testP1_in
	echo '.././test/P1' >> .cake3/tmp__testP1_in
./lib.urp: ./../Uru/lib.urp ./Makefile ./ffi.h ./ffi.o ./persona.ur ./persona.urs .cake3/tmp__lib_in autogen/Urweb_persona_js.ur autogen/Urweb_persona_js.urs autogen/Urweb_persona_js_c.h autogen/Urweb_persona_js_c.o $(call GUARD,LIBJANSSON) $(call GUARD,LIBLIBCURL)
	cat .cake3/tmp__lib_in | sed 's@%LIBCURL%@$(LIBLIBCURL)@' | sed 's@%JANSSON%@$(LIBJANSSON)@' > ./lib.urp
.cake3/tmp__lib_in: ./Makefile
	-rm -rf .cake3/tmp__lib_in
	echo 'allow mime text/javascript' >> .cake3/tmp__lib_in
	echo 'database dbname=persona' >> .cake3/tmp__lib_in
	echo 'sql ./persona.sql' >> .cake3/tmp__lib_in
	echo 'script https://login.persona.org/include.js' >> .cake3/tmp__lib_in
	echo 'ffi ./personaFfi' >> .cake3/tmp__lib_in
	echo 'jsFunc PersonaFfi.request = request' >> .cake3/tmp__lib_in
	echo 'jsFunc PersonaFfi.logout = logout' >> .cake3/tmp__lib_in
	echo 'jsFunc PersonaFfi.watch = watch' >> .cake3/tmp__lib_in
	echo 'ffi ./ffi' >> .cake3/tmp__lib_in
	echo 'link %JANSSON%' >> .cake3/tmp__lib_in
	echo 'link %LIBCURL%' >> .cake3/tmp__lib_in
	echo 'link ./ffi.o' >> .cake3/tmp__lib_in
	echo 'include ./ffi.h' >> .cake3/tmp__lib_in
	echo 'safeGet Persona/signin' >> .cake3/tmp__lib_in
	echo 'safeGet Persona/signout' >> .cake3/tmp__lib_in
	echo 'allow responseHeader X-UA-Compatible' >> .cake3/tmp__lib_in
	echo 'include autogen/Urweb_persona_js_c.h' >> .cake3/tmp__lib_in
	echo 'link autogen/Urweb_persona_js_c.o' >> .cake3/tmp__lib_in
	echo 'ffi autogen/Urweb_persona_js_c' >> .cake3/tmp__lib_in
	echo 'ffi autogen/Urweb_persona_js_js' >> .cake3/tmp__lib_in
	echo 'allow mime text/javascript' >> .cake3/tmp__lib_in
	echo 'safeGet Urweb_persona_js/blobpage' >> .cake3/tmp__lib_in
	echo 'safeGet Urweb_persona_js/blob' >> .cake3/tmp__lib_in
	echo 'safeGet Persona/main' >> .cake3/tmp__lib_in
	echo 'safeGet Persona/persjs' >> .cake3/tmp__lib_in
	echo 'safeGet Persona/add' >> .cake3/tmp__lib_in
	echo 'library ./../Uru' >> .cake3/tmp__lib_in
	echo 'debug' >> .cake3/tmp__lib_in
	echo 'safeGet PersonaFfi/request' >> .cake3/tmp__lib_in
	echo 'safeGet PersonaFfi/logout' >> .cake3/tmp__lib_in
	echo '' >> .cake3/tmp__lib_in
	echo 'autogen/Urweb_persona_js' >> .cake3/tmp__lib_in
	echo './persona' >> .cake3/tmp__lib_in
./ffi.o: ./Makefile ./ffi.c $(call GUARD,URCC) $(call GUARD,URINCL) $(call GUARD,UR_CFLAGS)
	$(URCC) -c $(URINCL) $(UR_CFLAGS) $(shell pkg-config --cflags libcurl) $(shell pkg-config --cflags jansson)  -o ./ffi.o ./ffi.c
autogen/Urweb_persona_js_c.o: ./Makefile autogen/Urweb_persona_js_c.c $(call GUARD,URCC) $(call GUARD,URINCL) $(call GUARD,UR_CFLAGS)
	$(URCC) -c $(URINCL) $(UR_CFLAGS) $(shell pkg-config --cflags libcurl) $(shell pkg-config --cflags jansson)  -o autogen/Urweb_persona_js_c.o autogen/Urweb_persona_js_c.c
$(call GUARD,LIBJANSSON):
	rm -f .cake3/GUARD_LIBJANSSON_*
	touch $@
$(call GUARD,LIBLIBCURL):
	rm -f .cake3/GUARD_LIBLIBCURL_*
	touch $@
$(call GUARD,URCC):
	rm -f .cake3/GUARD_URCC_*
	touch $@
$(call GUARD,URINCL):
	rm -f .cake3/GUARD_URINCL_*
	touch $@
$(call GUARD,URVERSION):
	rm -f .cake3/GUARD_URVERSION_*
	touch $@
$(call GUARD,UR_CFLAGS):
	rm -f .cake3/GUARD_UR_CFLAGS_*
	touch $@

else

# Prebuild/postbuild section

ifneq ($(MAKECMDGOALS),clean)

.PHONY: all
all: .fix-multy1
.PHONY: lib
lib: .fix-multy1
.PHONY: ./test/P1.exe
./test/P1.exe: .fix-multy1
.PHONY: ./test/P1.urp
./test/P1.urp: .fix-multy1
.PHONY: .cake3/tmp__testP1_in
.cake3/tmp__testP1_in: .fix-multy1
.PHONY: ./lib.urp
./lib.urp: .fix-multy1
.PHONY: .cake3/tmp__lib_in
.cake3/tmp__lib_in: .fix-multy1
.PHONY: ./ffi.o
./ffi.o: .fix-multy1
.INTERMEDIATE: .fix-multy1
.fix-multy1: 
	-mkdir .cake3
	urweb -print-cinclude >/dev/null
	$(MAKE) -C ./../Uru -f Makefile 
	MAIN=1 $(MAKE) -f ./Makefile $(MAKECMDGOALS)
.PHONY: autogen/Urweb_persona_js_c.o
autogen/Urweb_persona_js_c.o: .fix-multy1

endif
.PHONY: clean
clean: 
	-rm ./ffi.o ./lib.urp ./test/P1.exe ./test/P1.urp .cake3/tmp__lib_in .cake3/tmp__testP1_in autogen/Urweb_persona_js_c.o
	-rm -rf .cake3

endif
